function f=ee(x)
    X = x(1)
    f(1) = 1 + r*X + X^(2)
endfunction

for r = -2:-0.01:-5
    xi = [1] 
    [xf, yf, info] = fsolve(xi, ee)
    if info == 1 then
        scf(0)
        plot(r, xf(1), 'ro')
     end
end












